<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="261.0" prefWidth="342.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.simplecalculator01.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
    </padding>
   <children>
      <HBox prefHeight="58.0" prefWidth="302.0">
         <children>
            <TextField fx:id="txtValue1">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Label fx:id="lblOperator" contentDisplay="CENTER" minWidth="25.0" text="?" />
            <TextField fx:id="txtValue2">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="57.0" prefWidth="302.0">
         <children>
            <Button fx:id="btnPlus" mnemonicParsing="false" onAction="#onPlusOperation" text="+">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnMinus" mnemonicParsing="false" onAction="#onMinusOperation" text="-">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnMultiply" mnemonicParsing="false" onAction="#onMultiplyOperation" text="*">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnDivide" mnemonicParsing="false" onAction="#onDivideOperation" text="/" />
         </children>
      </HBox>
      <HBox prefHeight="42.0" prefWidth="302.0">
         <children>
            <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#onCalculate" prefHeight="26.0" prefWidth="306.0" text="Calculate" />
         </children>
      </HBox>
      <HBox prefHeight="128.0" prefWidth="302.0">
         <children>
            <Label text="Result:" />
            <Label fx:id="lblResult" text="&lt;result&gt;">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
